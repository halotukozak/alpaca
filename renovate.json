{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch":  [
        "(^|/)build\\.sc$",
        "(^|/)build\\.mill$",
        "\\.mill$"
      ],
      "matchStrings": [
        "mvn\"(?<depName>[^: ]+:[^:]+):(?<currentValue>[^\"]+)\""
      ],
      "datasourceTemplate": "maven"
    },
    {
      "customType": "regex",
      "fileMatch": [
        "(^|/)build\\.sc$",
        "(^|/)build\\.mill$",
        "\\.mill$"
      ],
      "matchStrings": [
        "def scalaVersion\\s*=\\s*\"(?<currentValue>\\d+\\.\\d+\\.\\d+)\""
      ],
      "depNameTemplate": "scala/scala3",
      "datasourceTemplate": "github-releases",
      "versioningTemplate": "semver"
    },
    {
      "customType": "regex",
      "fileMatch": [
        "(^|/)build\\.sc$",
        "(^|/)build\\.mill$",
        "\\.mill$"
      ],
      "matchStrings": [
        "def scoverageVersion\\s*=\\s*\"(?<currentValue>\\d+\\.\\d+\\.\\d+)\""
      ],
      "depNameTemplate":  "scoverage/scalac-scoverage-plugin",
      "datasourceTemplate": "github-releases",
      "versioningTemplate": "semver"
    },
    {
      "customType": "regex",
      "fileMatch": [
        "(^|/)build\\.sc$",
        "(^|/)build\\.mill$",
        "\\. mill$"
      ],
      "matchStrings": [
        "//\\|\\s*mill-version:\\s*(?<currentValue>\\S+)"
      ],
      "depNameTemplate":  "com.lihaoyi:mill-main",
      "datasourceTemplate": "maven"
    },
    {
      "customType": "regex",
      "fileMatch": [
        "(^|/)build\\.sc$",
        "(^|/)build\\.mill$",
        "\\. mill$"
      ],
      "matchStrings": [
        "//\\|\\s*mill-jvm-version:\\s*(?<currentValue>\\d+)"
      ],
      "depNameTemplate": "java",
      "datasourceTemplate": "adoptium-java",
      "versioningTemplate": "regex:^(? <major>\\d+)$"
    }
  ]
}
